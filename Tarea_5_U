//tarea5
let number: number[] = [1, 6, 8, 4, 2, 7, 10, 3, 5];

// Utilizamos un ciclo for para recorrer el arreglo
for (let i = 0; i < number.length; i++) {
    // Verificamos si el número es par o impar usando el operador %
    const esPar: boolean = number[i] % 2 === 0;

    // Imprimimos el mensaje correspondiente
    if (esPar) {
        console.log(`${number[i]} es un número par`);
    } else {
        console.log(`${number[i]} es un número impar`);
    }
}