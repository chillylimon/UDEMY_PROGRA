function convertirKilometrosAMillas(kilometros: number): number {

    const factorConversion: number = 0.62;
    const millas: number = kilometros * factorConversion;
    return millas;
}


const kilometros: number = 10;
const millasConvertidas: number = convertirKilometrosAMillas(kilometros);
console.log(`${kilometros} kil√≥metros son aproximadamente ${millasConvertidas.toFixed(2)} millas`);
